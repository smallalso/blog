---
import type { CollectionEntry } from 'astro:content';

// import { slugifyStr } from '@utils/slugify';

export interface Props {
    href?: string;
    frontmatter: CollectionEntry<'blog'>['data'];
    secHeading?: boolean;
}
const { href, frontmatter, secHeading } = Astro.props;
const { title, publishDate, readingTime } = frontmatter;
const headerProps = {
        className: 'text-lg font-medium decoration-dashed hover:underline',
    }
---

<li class="my-2">
  <a
      href={href}
      class="inline-block text-lg font-medium text-skin-accent decoration-dashed underline-offset-4 focus-visible:no-underline focus-visible:underline-offset-0"
  >
      {secHeading ? <h2 {...headerProps}>{title}</h2> : <h3 {...headerProps}>{title}</h3>}
  </a>
  <!-- <Datetime pubDatetime={pubDatetime} readingTime={readingTime} /> -->
</li>
